<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
	<title>Sente Assistant</title>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<style><!-- #include file = "template.css" --></style>
</head>
<body>
<%@ taglib uri="file:senteAssistantTags.tld" prefix="s" %> 
<s:setupAssistant />
<s:getReferences id="references" />

<p style="text-align: right;" />
<s:prefStyle property="headingGreyCSS">Notes and Summary</s:prefStyle>
<p style="text-align: right;"><s:getFilterState /></p>

<s:do name="references" property="yourself" variable="aReference"> 
	<div class="senteReference">
		<s:prefStyle property="referenceTitleCSS"><s:getTitle name="aReference" /></s:prefStyle>
		<s:prefStyle property="referenceAuthorCSS"><s:getAuthor name="aReference" /> <s:getReferenceCitation reference="aReference" /></s:prefStyle>
 		<br />

		<s:prefStyle property="headingGreyCSS">Summary</s:prefStyle>
		<s:getNotes id="aReference" notes="notes" />
		<div class="notesSummary">
		<s:do name="notes" property="yourself" variable="aNote"> 
			<s:prefStyle property="noteSummaryCSS">
				<a href="#<s:getProperty name="aNote" property="noteUUID" />" class="noteSource"><s:getProperty name="aNote" property="title" /></a>
			</s:prefStyle>
		</s:do>
		</div>
		<br />

		<s:prefStyle property="headingGreyCSS">Notes</s:prefStyle>
		<div class="senteNotes">
		<s:do name="notes" property="yourself" variable="aNote"> 
			<s:noteStyle name="aNote">
				<s:prefStyle property="noteTitleCSS"><s:getProperty name="aNote" property="title" /></s:prefStyle>
					<s:prefStyle property="noteBodyCSS"><s:getProperty name="aNote" property="quotation" />
 						<s:getNoteCitation reference="aReference" note="aNote" /></s:prefStyle>
					<s:prefStyle property="noteCommentCSS"><s:getProperty name="aNote" property="formattedComment" /></s:prefStyle>
			</s:noteStyle>
		</s:do>
		</div>

	</div>
</s:do>

</body>
<s:releaseAssistant />
</html>